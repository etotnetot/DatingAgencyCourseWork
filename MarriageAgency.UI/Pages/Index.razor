@page "/"

<div class="welcome">

    <h1>Authorization!</h1>
    <AuthorizeView>
        <Authorized>
            Welcome @context.User.Identity.Name !
        </Authorized>
        <NotAuthorized>
            You are not authorized. Go to <a href="/login">Login</a>
        </NotAuthorized>
    </AuthorizeView>

</div>

<style>

    .welcome {
        align-items: center;
        display: flex;
        flex-direction: column;
    }

</style>